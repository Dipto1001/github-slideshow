    <!-- php operator -->


    <?php
    //arithmetic operator
    $x = 25;
    $y = 20;

    echo $x + $y . "<br>"; //addition
    echo $x - $y . "<br>"; //subtraction
    echo $x * $y . "<br>"; //multiplication
    echo $x / $y . "<br>"; //division
    echo $x % $y . "<br>"; //modulus
    ?>

    <?php
    //assignment operator
    $x = 10; //addition
    $x += 100;

    echo $x  . "<br>";

    $x = 20; //subtraction
    $x -= 100;

    echo $x  . "<br>";

    $x = 30; //multiplication
    $x *= 100;

    echo $x  . "<br>";

    $x = 10; //division
    $x /= 100;

    echo $x  . "<br>";

    $x = 15; //modulus
    $x %= 100;

    echo $x  . "<br>";
    ?>

    <!-- php increment and decrement-->
    <?php
    $x = 5;
    echo ++$x . "<br>"; //pre-increment

    $x = 10;
    echo $x++ . "<br>";
    echo $x . "<br>"; //post increment

    $x = 25;
    echo --$x . "<br>"; //pre decrement

    $x = 30;
    echo $x-- . "<br>";
    echo $x . "<br>"; //post decrement

    ?>




    <!-- php logical operator-->
    <?php
    $x = 5;
    $y = 10;
    if ($x == 5 and $y == 10) {
        echo "Hello World!  <br>";
    } //logical And operator.

    if ($x == 5 or $y == 9) {
        echo "Hello World!  <br>";
    } //logical OR operator.

    if ($x == 5 xor $y == 9) {
        echo "Hello World!  <br>";
    } // logicla xor operator.

    if ($x == 5 && $y == 10) {
        echo "Hello World! <br>";
    } // logical && operator.

    if ($x == 5 || $y == 9) {
        echo "Hello World!  <br>";
    } // logical || operator.

    if ($x !== 10) {
        echo "Hello World!  <br>";
    } // logical not operator.

    ?>

    <!-- php comparism operator-->
    <?php
    $x = 10;
    $y = 10;
    //equal operator
    var_dump($x == $y); //bool true when both are equal operator
    //identical operator
    var_dump($x === $y); //bool true when they are equal and same type
    //Not equal operator
    var_dump($x != $y); //return true when $x not equal to $y
    var_dump($x <> $y);
    // greater than operator
    var_dump($x < $y);
    //less than operator
    var_dump($x > $y);


    ?>

    <!--php string operator-->

    <?php
    //concatenation uses
    $x = 'I Love';

    $y = 'Bangladesh';
    echo ($x . $y);

    ?>

