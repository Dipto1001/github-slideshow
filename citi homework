    <?php
    //if else statement

    $x = 10;
    $y = 20;

    if ($x < $y) {
        echo "x is less than y";
    } else {
        echo "x is more than y";
    }


    ?>

    <?php
    //if-elseif-else statement
    $x = 30;
    $y = 20;
    $z = 15;

    if ($x < $y && $x < $z) {
        echo "x is the smallest number";
    } elseif ($y < $x && $y < $z) {
        echo "y is the smallest number";
    } else {
        echo "z is the smallest number";
    }

    ?>

    <?php
    //switch statement
    $favcolor = "magenda";
    switch ($favcolor) {
        case "red":
            echo "Your favorite color is red!";
            break;
        case "blue":
            echo "Your favourite color is blue ";
            break;
        case "green":
            echo "Your favourite color is green";
            break;
        case "yellow":
            echo "Your favourite color is yellow";
            break;
        default:
            echo "Your favourite color is not green ,yellow,red or blue";
    }

    ?>

    <!--php loop statement-->


    <?php
    //while loop

    $x = 5;
    while ($x <= 10) {
        echo "The number is $x  <br>";
        $x++;
    }

    ?>

    <?php
    //do while loop structure
    $x = 1;
    do {
        echo "The number is $x  <br>";
        $x++;
    } while ($x < 10);

